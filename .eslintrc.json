{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "double"],
    "implicit-arrow-linebreak": "off",
    "comma-dangle": ["error", "never"],
    "function-paren-newline": "off",
    "arrow-parens": ["error", "as-needed"],
    "operator-linebreak": "off",
    "indent": ["error", 2]
  }
}
